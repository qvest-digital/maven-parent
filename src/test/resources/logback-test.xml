<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %7level \(%thread\) [%logger] %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>target/tests-logback.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>target/tests-logback.log.%d{yyyy-MM-dd}</fileNamePattern>
			<!-- daily rollover -->
			<maxHistory>30</maxHistory>
			<!-- keep 30 days’ worth of history -->
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %7level \(%thread\) [%logger] %msg%n</pattern>
		</encoder>
	</appender>
	<!-- suppress logging of external libs here -->
	<logger name="org.hibernate" level="WARN"/>
	<logger name="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" level="WARN"/>
	<!-- use DEBUG in test, INFO in production -->
	<root level="DEBUG">
		<appender-ref ref="FILE"/>
	</root>
	<!-- Bitte nur für Debug-Zwecke -->
	<!--logger name="org.hibernate.SQL" level="DEBUG"/-->
	<!--logger name="org.hibernate.type" level="TRACE" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger-->
</configuration>
